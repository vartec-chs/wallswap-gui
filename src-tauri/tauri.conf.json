{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "wallswap-gui",
	"version": "0.1.0",
	"identifier": "com.vartec.wallswap",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "WallSwap",
				"width": 800,
				"height": 600,
				"resizable": false,
				"fullscreen": false,
				"decorations": true,
				"visible": true,
				"minWidth": 800,
				"minHeight": 600,
				"maxWidth": 800,
				"maxHeight": 600,
				"alwaysOnTop": false,
				"focus": true,
				"center": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
